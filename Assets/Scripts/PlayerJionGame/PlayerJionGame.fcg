    //———————————————————————————————————————————————————————————————————//
    // CD更新函数
    func UpdateCD_1() {
        var x = Skill1_CDState["x"]
        var y = Skill1_CDState["y"]
        
        x = x - 500
        y = y + 1
        if x < MinCD {
            x = 5000
            y = 0
        }
        
        Skill1_CDState["x"] = x
        Skill1_CDState["y"] = y
        CurrentSkill_1_DATA_LIST["CD"] = x
